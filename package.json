{
  "name": "gateway",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "yarn run tsc",
    "tsc": "tsc --project tsconfig.compile.json",
    "tsc:w": "tsc --project tsconfig.json -w",
    "start": "docker-compose --profile container-dev stop && docker-compose --profile container-dev up -d",
    "start:local": "docker-compose --profile container-dev stop && docker-compose --profile local-dev up -d && npm run start:plain",
    "start:plain": "tsnd --inspect --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "start:plain:prod": "cross-env NODE_ENV=production node dist/index.js",
    "rebuild": "git submodule update --recursive --remote && docker-compose --profile container-dev down && docker-compose --profile container-dev up -d --build",
    "test:lint": "eslint src --ext .ts",
    "test:lint:fix": "eslint src --ext .ts --fix",
    "prettier": "prettier '{src,test}/**/*.ts' --write"
  },
  "dependencies": {
    "@tsed/ajv": "^6.84.1",
    "@tsed/common": "^6.84.1",
    "@tsed/core": "^6.84.1",
    "@tsed/di": "^6.84.1",
    "@tsed/exceptions": "^6.84.1",
    "@tsed/json-mapper": "^6.84.1",
    "@tsed/platform-express": "^6.84.1",
    "@tsed/schema": "^6.84.1",
    "@tsed/swagger": "^6.84.1",
    "ajv": "^8.8.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "method-override": "^3.0.0"
  },
  "devDependencies": {
    "@tsed/cli-plugin-eslint": "3.15.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/method-override": "^0.0.32",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.11.9",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.4.1",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.11.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2"
  },
  "tsed": {
    "packageManager": "yarn",
    "convention": "default",
    "architecture": "default"
  }
}
